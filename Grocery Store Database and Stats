--display the database  
SELECT * FROM Inventory;

--display the database ordered by Color. 
SELECT * FROM Inventory ORDER BY Color;

--display the database ordered by price. 
SELECT * FROM Inventory ORDER BY Price;

--what is the avg price of items in the section? 
SELECT AVG(Price) FROM Inventory;

--what is the Min price of items in the section? 
SELECT MIN(Price) FROM Inventory;

--what is the Max price of items in the section? 
SELECT MAX(Price) FROM Inventory;







